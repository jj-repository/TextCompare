{
  "name": "textcompare",
  "version": "2.1.1",
  "description": "A modern text diff tool with side-by-side comparison, optimized LCS algorithm, and desktop support",
  "main": "electron-main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/jj-repository/TextCompare.git"
  },
  "homepage": "https://jj-repository.github.io/TextCompare/",
  "bugs": {
    "url": "https://github.com/jj-repository/TextCompare/issues"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --linux --win"
  },
  "keywords": [
    "diff",
    "compare",
    "text",
    "merge",
    "tool",
    "lcs",
    "electron",
    "desktop"
  ],
  "author": {
    "name": "TextCompare Contributors",
    "email": "textcompare@users.noreply.github.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.textcompare.app",
    "productName": "TextCompare",
    "files": [
      "index.html",
      "electron-main.js"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development",
      "icon": "icon.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icon.png"
    },
    "directories": {
      "output": "dist"
    }
  }
}
